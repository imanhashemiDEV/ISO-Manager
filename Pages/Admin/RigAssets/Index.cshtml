                                        @Html.DisplayFor(modelItem => item.default_count)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.exist_count)
                                    </td>
                                    <td>
                                        @if (item.count_unit.Equals("number"))
                                        {
                                            <span class="badge text-white bg-success-500">عدد</span>
                                        }
                                        else if (item.count_unit.Equals("loop"))
                                        {
                                            <span class="badge text-white bg-danger-500">حلقه</span>
                                        }
                                        else if (item.count_unit.Equals("set"))
