@page
@model ISO_Manager.Pages.Admin.Standards.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Standard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="Text-danger"></div>
            <input Type="hidden" asp-for="Standard.Id" />
            <div class="form-group">
                <label asp-for="Standard.StandardName" class="control-label"></label>
                <input asp-for="Standard.StandardName" class="form-control" />
                <span asp-validation-for="Standard.StandardName" class="Text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Standard.FaChapter" class="control-label"></label>
                <input asp-for="Standard.FaChapter" class="form-control" />
                <span asp-validation-for="Standard.FaChapter" class="Text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Standard.FaSubchapter" class="control-label"></label>
                <input asp-for="Standard.FaSubchapter" class="form-control" />
                <span asp-validation-for="Standard.FaSubchapter" class="Text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Standard.CreatedAt" class="control-label"></label>
                <input asp-for="Standard.CreatedAt" class="form-control" />
                <span asp-validation-for="Standard.CreatedAt" class="Text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Standard.UpdatedAt" class="control-label"></label>
                <input asp-for="Standard.UpdatedAt" class="form-control" />
                <span asp-validation-for="Standard.UpdatedAt" class="Text-danger"></span>
            </div>
            <div class="form-group">
                <input Type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
