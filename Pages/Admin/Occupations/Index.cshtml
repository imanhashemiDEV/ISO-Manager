@page
@model ISO_Manager.Pages.Admin.Occupation.IndexModel

@{
    ViewData["Title"] = "لیست سمت ها";
}

<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">خانه</a></li>
                    <li class="breadcrumb-item" aria-current="page">لیست سمت ها</li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-x-6">
            <div class="col-span-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="sm:flex items-center justify-between">
                            <h5 class="mb-3 sm:mb-0">لیست سمت ها</h5>
                            <div>
                                <a asp-page="./Create" class="btn btn-primary">اضافه کردن سمت</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-3">
                        <div class="table-responsive">
                            <table class="table table-hover" id="pc-dt-simple">
                                <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th> @Html.DisplayNameFor(model => model.Occupation[0].Title)</th>
                                    <th> @Html.DisplayNameFor(model => model.Occupation[0].OccupationCode)</th>
                                    <th> @Html.DisplayNameFor(model => model.Occupation[0].OccupationType)</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Occupation[0].Organization)
                                        </th>
                                    <th>عملیات</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Occupation)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OccupationCode)</td>
                                        <td>
                                            @if (item.OccupationType!.Equals("rasmi"))
                                            {
                                                <span class="badge text-white bg-success-500">رسمی</span>
                                            }
                                            else if (item.OccupationType.Equals("gharardadi"))
                                            {
                                                <span class="badge text-white bg-danger-500">قراردادی</span> 
                                            }
                                            else
                                            {
                                                <span class="badge text-white bg-info-500">پیمانکاری</span>
                                            }
                                        </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Organization!.Title)
                                            </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="w-8 h-8 rounded-xl inline-flex items-center justify-center btn-link-secondary">
                                                <i class="ti ti-edit text-xl leading-none"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                            @if (ViewBag.ItemCount > ViewBag.Take)
                            {
                                <nav aria-label="Page navigation example">
                                    <ul class="flex justify-center *:*:inline-block *:*:px-3 *:*:py-1.5 *:border *:border-theme-border *:dark:border-themedark-border hover:*:bg-secondary-300/10 mb-3">
                                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                                        {
                                            <li class="@((ViewBag.pageId == i) ? "bg-primary" : "")"><a asp-route-pageId="@i">@i</a></li>
                                        }
                                    </ul>
                                </nav>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>

