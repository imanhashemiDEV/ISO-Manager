@page
@model ISO_Manager.Pages.Admin.Assets.EditModel

@{ ViewData["Title"] = "ویرایش اموال"; }

<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">خانه</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">لیست اموال</a></li>
                    <li class="breadcrumb-item" aria-current="page">ویرایش</li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-6">
            <div class="col-span-12">
                <div class="card">
                    <div class="card-header">
                        <h5>ویرایش اموال</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input Type="hidden" asp-for="Asset.Id" />
                            <div class="grid grid-cols-12 gap-6">
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Asset.Title" class="control-label"></label>
                                    <input asp-for="Asset.Title" class="form-control" />
                                    <span asp-validation-for="Asset.Title" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Asset.ETitle" class="control-label"></label>
                                    <input asp-for="Asset.ETitle" class="form-control" />
                                    <span asp-validation-for="Asset.ETitle" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Asset.AssetNumber" class="control-label"></label>
                                    <input asp-for="Asset.AssetNumber" class="form-control" />
                                    <span asp-validation-for="Asset.AssetNumber" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Asset.SerialNumber" class="control-label"></label>
                                    <input asp-for="Asset.SerialNumber" class="form-control" />
                                    <span asp-validation-for="Asset.SerialNumber" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Asset.DeviceUser" class="control-label"></label>
                                    <input asp-for="Asset.DeviceUser" class="form-control" />
                                    <span asp-validation-for="Asset.DeviceUser" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Asset.Description" class="control-label"></label>
                                    <input asp-for="Asset.Description" class="form-control" />
                                    <span asp-validation-for="Asset.Description" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Asset.InspectionDate" class="control-label"></label>
                                    <input asp-for="Asset.InspectionDate" class="form-control" />
                                    <span asp-validation-for="Asset.InspectionDate" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Asset.Status" class="control-label"></label>
                                    <select asp-for="Asset.Status" class="form-select">
                                        <option value="active">فعال</option>
                                        <option value="deactive">غیر فعال</option>
                                    </select>
                                    <span asp-validation-for="Asset.Status" class="text-danger"></span>
                                </div>
                            </div>
                            <button Type="submit" class="btn btn-info">ویرایش</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
