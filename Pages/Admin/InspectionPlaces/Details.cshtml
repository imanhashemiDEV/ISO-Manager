@page
@model ISO_Manager.Pages.Admin.InspectionPlaces.DetailsModel

@{
    ViewData["Title"] = "سوالات محل بازرسی";
    var row = 1;
}


<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">خانه</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">لیست گروههای بازرسی</a></li>
                    <li class="breadcrumb-item" aria-current="page">لیست سوالات بازرسی </li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-x-6">
            <div class="col-span-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="sm:flex items-center justify-between">
                            <h5 class="mb-3 sm:mb-0">لیست سوالات بازرسی </h5>
                            <div>
                                <a asp-page="/Admin/Inspectiontexts/Create" asp-route-id="@Model.InspectionPlace.Id" class="btn btn-primary">اضافه کردن سوال</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-3">
                        <div class="table-responsive">
                            <table class="table table-hover" id="pc-dt-simple">
                                <thead>

                                    <tr>
                                        <th>ردیف</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Inspectiontext[0].text)
                                        </th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Inspectiontext)
                                    {
                                        <tr>
                                            <td>@(row++)</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.text)
                                            </td>
                                            <td>
                                                <a asp-page="/Admin/Inspectiontexts/Edit" asp-route-id="@item.Id" class="w-8 h-8 rounded-xl inline-flex items-center justify-center btn-link-secondary">
                                                    <i class="ti ti-edit text-xl leading-none"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>
