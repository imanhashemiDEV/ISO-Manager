@page
@model ISO_Manager.Pages.Admin.Permits.CreateModel

@{ ViewData["Title"] = "ایجاد پرمیت"; }
        
        
<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">خانه</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">لیست پرمیت ها</a></li>
                    <li class="breadcrumb-item" aria-current="page">ایجاد</li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-6">
            <div class="col-span-12">
                <div class="card">
                    <div class="card-header">
                        <h5>ایجاد پرمیت</h5>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="grid grid-cols-12 gap-6">
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.place" class="control-label"></label>
                                    <input asp-for="Permit.place" class="form-control" />
                                    <span asp-validation-for="Permit.place" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.permit_type" class="control-label"></label>
                                    <select asp-for="Permit.permit_type" class="form-select">
                                        <option value="hot">گرم</option>
                                        <option value="cold">سرد</option>
                                    </select>
                                    <span asp-validation-for="Permit.permit_type" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.permit_attachment_type" class="control-label"></label>
                                    <select asp-for="Permit.permit_attachment_type" class="form-select">
                                        <option value="highschool">کار در ارتفاع</option>
                                        <option value="diploma">حفاری</option>
                                        <option value="associate">کار در فضای محصور</option>
                                        <option value="bachelor">مواد رادیواکتیو</option>
                                    </select>
                                    <span asp-validation-for="Permit.permit_attachment_type" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.permit_date" class="control-label"></label>
                                    <input asp-for="Permit.permit_date" class="form-control" />
                                    <span asp-validation-for="Permit.permit_date" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.permit_number" class="control-label"></label>
                                    <input asp-for="Permit.permit_number" class="form-control" />
                                    <span asp-validation-for="Permit.permit_number" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.duration" class="control-label"></label>
                                    <input asp-for="Permit.duration" class="form-control" />
                                    <span asp-validation-for="Permit.duration" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.owner" class="control-label"></label>
                                    <input asp-for="Permit.owner" class="form-control" />
                                    <span asp-validation-for="Permit.owner" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.responsible" class="control-label"></label>
                                    <input asp-for="Permit.responsible" class="form-control" />
                                    <span asp-validation-for="Permit.responsible" class="text-danger"></span>
                                </div>
                                <div class="col-span-12 md:col-span-6 mb-4">
                                    <label asp-for="Permit.description" class="control-label"></label>
                                    <input asp-for="Permit.description" class="form-control" />
                                    <span asp-validation-for="Permit.description" class="text-danger"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">ثبت</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}