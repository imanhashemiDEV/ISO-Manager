@page
@model ISO_Manager.Pages.Admin.ClothGroups.DetailsModel

@{
    ViewData["Title"] = "لیست اعضای گروه";
}


<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">خانه</a></li>
                    <li class="breadcrumb-item" aria-current="page">لیست اعضای گروه</li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-x-6">
            <div class="col-span-12">
                <div class="card">
                    <div class="card-header">
                        <h5>ثبت گروهی البسه</h5>
                    </div>
                    <div class="card-body pc-component">
                        <div class="flex flex-wrap gap-2">
                            <a asp-page-handler="SetCloth" asp-route-type="shoes" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">کفش ایمنی </a>
                            <a asp-page-handler="SetCloth" asp-route-type="boot" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">چکمه ایمنی </a>
                            <a asp-page-handler="SetCloth" asp-route-type="boot-shoes" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">کفش ایمنی ساق بلند </a>
                            <a asp-page-handler="SetCloth" asp-route-type="boiler-suit" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">لباس کار</a>
                            <a asp-page-handler="SetCloth" asp-route-type="glasses" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">عینک ایمنی </a>
                            <a asp-page-handler="SetCloth" asp-route-type="earmuff" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">گوشی ایمنی </a>
                            <a asp-page-handler="SetCloth" asp-route-type="safety-helmet" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">کلاه ایمنی </a>
                            <a asp-page-handler="SetCloth" asp-route-type="rain-coat" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">بارانی</a>
                            <a asp-page-handler="SetCloth" asp-route-type="over-coat" asp-route-clothGroupId="@Model.ClothGroup.Id" class="btn shadow-[0_6px_7px_-1px_rgba(80,86,175,.3)] btn-primary">اورکت</a>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-span-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="sm:flex items-center justify-between">
                            <h5 class="mb-3 sm:mb-0">لیست اعضای گروه</h5>
                            <div>
                                <a asp-page="/Admin/ClothGroupLists/Create" asp-route-id="@Model.ClothGroup.Id" class="btn btn-primary">اضافه کردن عضو گروه</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-3">
                        <div class="table-responsive">
                            <table class="table table-hover" id="pc-dt-simple">
                                <thead>

                                    <tr>
                                        <th>ردیف</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ClothGroupList[0].Shoes)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ClothGroupList[0].BoilerSuit)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ClothGroupList[0].User)
                                        </th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ClothGroupList)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Shoes)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BoilerSuit)
                                            </td>
                                            <td>
                                               @Html.DisplayFor(modelItem => item.User.Name)
                                            </td>
                                            <td>
                                                <a asp-page="/Admin/ClothGroupLists/Edit" asp-route-id="@item.Id" class="w-8 h-8 rounded-xl inline-flex items-center justify-center btn-link-secondary">
                                                    <i class="ti ti-edit text-xl leading-none"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            @if (ViewBag.ItemCount > ViewBag.Take)
                            {
                                <nav aria-label="Page navigation example">
                                    <ul class="flex justify-center *:*:inline-block *:*:px-3 *:*:py-1.5 *:border *:border-theme-border *:dark:border-themedark-border hover:*:bg-secondary-300/10 mb-3">
                                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                                        {
                                            <li class="@((ViewBag.pageId == i) ? "bg-primary" : "")"><a asp-route-pageId="@i">@i</a></li>
                                        }
                                    </ul>
                                </nav>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>