@page
@model ISO_Manager.Pages.Admin.Calibrations.IndexModel
@using System.Globalization
@using ISO_Manager.Utilities

@{
    ViewData["Title"] = "لیست گازسنج ها";
    var row = 1;
    var persianCalendar = new PersianCalendar();
}


<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">خانه</a></li>
                    <li class="breadcrumb-item" aria-current="page">لیست گازسنج ها</li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-x-6">
            <div class="col-span-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" class="flex w-full items-center">
                            <div class=" w-1/2 ml-4">
                                <input Type="text" class="form-control" asp-for="Search">
                            </div>
                            <div class="">
                                <button Type="submit" class="btn btn-primary">جستجو</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card table-card">
                    <div class="card-header">
                        <div class="sm:flex items-center justify-between">
                            <h5 class="mb-3 sm:mb-0">لیست گازسنج ها</h5>
                            <div>
                                <a asp-page="./Create" class="btn btn-primary">اضافه کردن گازسنج</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-3">
                        <div class="table-responsive">
                            <table class="table table-hover" id="pc-dt-simple">
                                <thead>

                                <tr>
                                    <th>ردیف</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Calibration[0].Title)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Calibration[0].AssetNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Calibration[0].SerialNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Calibration[0].DeviceOwner)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Calibration[0].DeviceUser)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Calibration[0].StartCalibration)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Calibration[0].EndCalibration)
                                    </th>
                                    <th>عملیات</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model.Calibration)
                                {
                                    <tr>
                                        <td>@(row++ + ((ViewBag.pageId - 1) * ViewBag.Take))</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AssetNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SerialNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DeviceOwner)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DeviceUser)
                                        </td>
                                        <td>
                                                @DateToPersian.ToShamsi(item.StartCalibration, "yyyy/MM/dd")
                                        </td>
                                        <td>
                                                @DateToPersian.ToShamsi(item.EndCalibration, "yyyy/MM/dd")
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="w-8 h-8 rounded-xl inline-flex items-center justify-center btn-link-secondary">
                                                <i class="ti ti-edit text-xl leading-none"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                </tbody>

                            </table>
                            @if (ViewBag.ItemCount > ViewBag.Take)
                            {
                                <nav aria-label="Page navigation example">
                                    <ul class="flex justify-center *:*:inline-block *:*:px-3 *:*:py-1.5 *:border *:border-theme-border *:dark:border-themedark-border hover:*:bg-secondary-300/10 mb-3">
                                        @for (int i = 1; i <= ViewBag.PageCount; i++)
                                        {
                                            <li class="@((ViewBag.pageId == i) ? "bg-primary" : "")"><a asp-route-pageId="@i">@i</a></li>
                                        }
                                    </ul>
                                </nav>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>