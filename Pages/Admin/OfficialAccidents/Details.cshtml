@page
@model ISO_Manager.Pages.Admin.OfficialAccidents.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">خانه</a></li>
                    <li class="breadcrumb-item"><a asp-page="./Index">لیست حوادث پیمانکاری و قراردادی</a></li>
                    <li class="breadcrumb-item" aria-current="page">جزئیات حادثه</li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-6">
            <!-- [ sample-page ] start -->
            <div class="col-span-12">
                <div class="card">
                    <div class="card-body !py-0">
                        <ul class="flex flex-wrap w-full font-medium Text-center nav-tabs">
                            <li class="group active">
                                <a href="javascript:void(0);" data-pc-toggle="tab" data-pc-target="profile-1" class="inline-flex items-center mr-6 py-4 transition-all Duration-300 ease-linear border-t-2 border-b-2 border-transparent group-[.active]:Text-primary-500 group-[.active]:border-b-primary-500 hover:Text-primary-500 active:Text-primary-500">
                                    <i class="ti ti-user ltr:mr-2 rtl:ml-2 Text-lg leading-none"></i>
                                    جزئیات حادثه
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="tab-content">
                    <div class="tab-pane" id="profile-1">
                        <div class="grid grid-cols-12 gap-6">
                            <div class="col-span-12 lg:col-span-4 2xl:col-span-3">
                                <div class="card">
                                    <div class="card-body relative">
                                        <div class="Text-center mt-3">
                                            <div class="chat-avtar inline-flex mx-auto justify-center">
                                                <img class="rounded-full w-[60px]" src="~/panel/images/user/avatar-1.jpg" alt="User image">
                                            </div>
                                            <h5 class="mb-0">@Model.OfficialAccident.User?.Name</h5>
                                            <p class="Text-muted Text-sm">@Model.OfficialAccident.User?.EmploymentType</p>
                                            <hr class="my-4 border-secondary-500/10">
                                            <div class="grid grid-cols-12 gap-0 divide-x rtl:divide-x-reverse divide-inherit divide-theme-border dark:divide-themedark-border">
                                                <div class="col-span-6">
                                                    <h5 class="mb-0">سن</h5>
                                                    <small class="Text-muted">55</small>
                                                </div>
                                                <div class="col-span-6">
                                                    <h5 class="mb-0">سابقه</h5>
                                                    <small class="Text-muted">12</small>
                                                </div>
                                            </div>
                                            <hr class="my-4 border-secondary-500/10">
                                            <div class="inline-flex items-center gap-3 w-full mb-3">
                                                <p class="mb-0">@Html.DisplayNameFor(model => model.OfficialAccident.AccidentDate)</p>
                                                <small class="Text-muted">@Html.DisplayFor(model => model.OfficialAccident.AccidentDate)</small>
                                            </div>
                                            <div class="inline-flex items-center gap-3 w-full mb-3">
                                                <p class="mb-0">@Html.DisplayNameFor(model => model.OfficialAccident.AccidentHour)</p>
                                                <small class="Text-muted">@Html.DisplayFor(model => model.OfficialAccident.AccidentHour)</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-span-12 lg:col-span-8 2xl:col-span-9">

                                <div class="card">
                                    <div class="card-header">
                                        <h5>اطلاعات حادثه</h5>
                                    </div>
                                    <div class="card-body">
                                        <ul class="*:py-4 divide-y divide-inherit border-theme-border dark:border-themedark-border">
                                            <li class="list-group-item px-0 pt-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted">@Html.DisplayNameFor(model => model.OfficialAccident.HseBoss)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.HseBoss)</p>
                                                    </div>
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted">@Html.DisplayNameFor(model => model.OfficialAccident.AccidentPlace)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.AccidentPlace)</p>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item px-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted">@Html.DisplayNameFor(model => model.OfficialAccident.ActivityInAccident)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.ActivityInAccident)</p>
                                                    </div>
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.DirectAccidentCauses)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.DirectAccidentCauses)</p>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item px-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted">@Html.DisplayNameFor(model => model.OfficialAccident.UnsafeActionCauses)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.UnsafeActionCauses)</p>
                                                    </div>
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted">@Html.DisplayNameFor(model => model.OfficialAccident.UnsafeConditionCauses)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.UnsafeConditionCauses)</p>
                                                    </div>

                                                </div>
                                            </li>
                                            <li class="list-group-item px-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.AccidentConsequence)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.AccidentConsequence)</p>
                                                    </div>
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.AccidentComplication)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.AccidentComplication)</p>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item px-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.Marriage)</p>
                                                        @if (Model.OfficialAccident.Marriage == "single")
                                                        {
                                                            <span class="badge bg-primary-500 Text-white">مجرد</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-primary-500 Text-white">متاهل</span>
                                                        }
                                                    </div>
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.IsGuilty)</p>
                                                        @if (Model.OfficialAccident.IsGuilty == 1)
                                                        {
                                                            <span class="badge bg-red-500 Text-white">مقصر</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success-500 Text-white">غیر مقصر</span>
                                                        }
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item px-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12 md:col-span-6">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.LostDays)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.LostDays)</p>
                                                    </div>
                                                    <div class="col-span-12 md:col-span-6">
                                                        @* <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.AccidentComplication)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.AccidentComplication)</p> *@
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item px-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.AccidentDescription)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.AccidentDescription)</p>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item px-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.DoctorDescription)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.DoctorDescription)</p>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="list-group-item px-0">
                                                <div class="grid grid-cols-12 gap-6">
                                                    <div class="col-span-12">
                                                        <p class="mb-1 Text-muted"> @Html.DisplayNameFor(model => model.OfficialAccident.HseDescription)</p>
                                                        <p class="mb-0">@Html.DisplayFor(model => model.OfficialAccident.HseDescription)</p>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- [ sample-page ] end -->
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>