@page
@model ISO_Manager.Pages.Admin.OfficialAccidents.IndexModel

@{
    ViewData["Title"] = "لیست حوادث کارکنان رسمی";
}


<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">خانه</a></li>
                    <li class="breadcrumb-item" aria-current="page">لیست حوادث کارکنان رسمی</li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-x-6">
            <div class="col-span-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="sm:flex items-center justify-between">
                            <h5 class="mb-3 sm:mb-0">لیست حوادث کارکنان رسمی</h5>
                            <div>
                                <a asp-page="./Create" class="btn btn-primary">اضافه کردن حادثه</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-3">
                        <div class="table-responsive">
                            <table class="table table-hover" id="pc-dt-simple">
                                <thead>

                                    <tr>
                                        <th>ردیف</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OfficialAccident[0].User)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OfficialAccident[0].accident_date)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OfficialAccident[0].accident_place)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OfficialAccident[0].accident_description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OfficialAccident[0].accident_consequence)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OfficialAccident[0].accident_complication)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OfficialAccident[0].accident_injured_part)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.OfficialAccident[0].lost_days)
                                        </th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OfficialAccident)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.accident_date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.accident_place)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.accident_description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.accident_consequence)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.accident_complication)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.accident_injured_part)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.lost_days)
                                            </td>
                                            <td>
                                                <a asp-page="./Details" asp-route-id="@item.Id" class="w-8 h-8 rounded-xl inline-flex items-center justify-center btn-link-secondary">
                                                    <i class="ti ti-eye text-xl leading-none"></i>
                                                </a>
                                                <a asp-page="./Edit" asp-route-id="@item.Id" class="w-8 h-8 rounded-xl inline-flex items-center justify-center btn-link-secondary">
                                                    <i class="ti ti-edit text-xl leading-none"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>