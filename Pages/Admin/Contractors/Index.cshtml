@page
@using ISO_Manager.Utilities
@model ISO_Manager.Pages.Admin.Contractors.IndexModel

@{
    ViewData["Title"] = "لیست  پیمانکاران";
    var row = 1;
}


<div class="pc-container">
    <div class="pc-content">
        <!-- [ breadcrumb ] start -->
        <div class="page-header">
            <div class="page-block">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="../Index">خانه</a></li>
                    <li class="breadcrumb-item" aria-current="page">لیست پیمانکاران</li>
                </ul>
            </div>
        </div>
        <!-- [ breadcrumb ] end -->
        <!-- [ Main Content ] start -->
        <div class="grid grid-cols-12 gap-x-6">
            <div class="col-span-12">
                <div class="card table-card">
                    <div class="card-header">
                        <div class="sm:flex items-center justify-between">
                            <h5 class="mb-3 sm:mb-0">لیست  پیمانکاران</h5>
                            <div>
                                <a asp-page="./Create" class="btn btn-primary">اضافه کردن پیمانکار</a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-3">
                        <div class="table-responsive">
                            <table class="table table-hover" id="pc-dt-simple">
                                <thead>

                                    <tr>
                                        <th>ردیف</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].Title)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].Company)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].Employer)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].EmployerMobile)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].ManagerAgent)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].ManagerAgentMobile)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].HseAgent)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].HseAgentMobile)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].PersonnelCount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].ContractNumber)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].StartDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].EndDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Contractor[0].Status)
                                        </th>
                                        <th>عملیات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Contractor)
                                    {
                                        <tr>
                                            <td>@(row++ + ((ViewBag.pageId - 1) * ViewBag.Take))</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Company)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Employer)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EmployerMobile)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ManagerAgent)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ManagerAgentMobile)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HseAgent)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.HseAgentMobile)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PersonnelCount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ContractNumber)
                                            </td>
                                            <td>
                                                @DateToPersian.ToShamsi(item.StartDate, "yyyy/MM/dd")
                                            </td>
                                            <td>
                                                @DateToPersian.ToShamsi(item.EndDate, "yyyy/MM/dd")
                                            </td>
                                            <td>
                                                @if (item.Status.Equals("active"))
                                                {
                                                    <span class="badge text-white bg-success-500">فعال</span>
                                                }
                                                else if (item.Status.Equals("expired"))
                                                {
                                                    <span class="badge text-white bg-warning-500">پایان یافته</span>
                                                }
                                                else
                                                {
                                                    <span class="badge text-white bg-danger-500">رد شده</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-page="/Admin/Examinations/Contractor" asp-route-ContractorId="@item.Id" class="w-8 h-8 rounded-xl inline-flex items-center justify-center btn-link-secondary">
                                                    <i class="ti ti-heart text-xl leading-none"></i>
                                                </a>
                                                <a asp-page="./Edit" asp-route-id="@item.Id" class="w-8 h-8 rounded-xl inline-flex items-center justify-center btn-link-secondary">
                                                    <i class="ti ti-edit text-xl leading-none"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>
